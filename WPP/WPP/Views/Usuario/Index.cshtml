@using WPP.Models.ModuloContratos

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuario</h2>

@Html.ActionLink("Crear Usuario", "CrearUsuario", "Usuario", new { @Class = "btn btn-primary" }, null)

<div class="row">
    <div class="col-md-12">

        <table class="table table-hover">
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Edad</th>
                <th>Roles</th>
            </tr>

            @foreach (var item in ViewBag.UsuariosList as IList<UsuarioModel>)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                    <td>@Html.DisplayFor(modelItem => item.Edad)</td>
                    <td>String.Join(", ", item.ToArray());</td>
                </tr>
            }

        </table>

    </div>
</div>


