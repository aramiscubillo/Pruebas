@model WPP.Model.General.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LogInLayout.cshtml";
}




<div>
    <div class="row">

        <div class="col-md-12">
            <div class="login-div-container">
                <h1>Prueba de Concepto</h1>
                <br />
                <p>Welcome!</p>
                <p>Ingrese el correo y contraseña</p>

                @using (Html.BeginForm("Login", "Usuario", FormMethod.Post, new { id = "frmLogin" }))
                {   @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label for="exampleInputEmail1" class=" control-label">Email:</label>

                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control nameInput" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class=" control-label">Password:</label>

                        @Html.PasswordFor(m => m.Password, new { @class = "form-control nameInput" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <button type="submit" class="btn btn-default">Log in</button>
                }

            </div>
            <br />
          
        </div>

    </div>

</div>


